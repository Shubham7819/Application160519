<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.UserDetailsFragment">

    <include layout="@layout/app_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/user_iv_user_details"
                android:padding="12dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_tv_user_details"
                android:gravity="center"
                android:textSize="24sp"
                android:text="user id" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/f_name_tv_user_details"
                android:gravity="center"
                android:textSize="24sp"
                android:text="user f name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l_name_tv_user_details"
                android:gravity="center"
                android:textSize="24sp"
                android:text="user l name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dob_tv_user_details"
                android:gravity="center"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_id_tv_user_details"
                android:gravity="center"
                android:textSize="24sp"
                android:text="user user id" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password_tv_user_details"
                android:gravity="center"
                android:textSize="24sp"
                android:text="user password" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>